{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "sourceMap": true,
    "jsxImportSource": "solid-js",
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "preserveSymlinks": true,
    "declaration": false,
  },
  "include": [
    "./src",
    "rollup.config.ts"
  ]
}
